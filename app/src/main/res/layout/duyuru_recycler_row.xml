<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/araCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/recycler_tarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.03.2023"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/recycler_baslik"
                app:layout_constraintBottom_toBottomOf="@id/recycler_baslik"/>
            <TextView
                android:id="@+id/recycler_baslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YKS Sonuclari"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toStartOf="@id/recycler_isim"
                app:layout_constraintStart_toEndOf="@id/recycler_tarih"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/recycler_isim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Umut Can Demir)"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/recycler_baslik"
                app:layout_constraintStart_toEndOf="@id/recycler_baslik"
                app:layout_constraintBottom_toBottomOf="@id/recycler_baslik"/>

            <TextView
                android:id="@+id/recycler_aciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/recycler_baslik"
                app:layout_constraintStart_toStartOf="parent"
                android:maxLines="2"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>